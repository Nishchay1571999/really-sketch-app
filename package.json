{
  "name": "really-sketch",
  "version": "0.3.4",
  "description": "Simple online graph paper with basic drafting tools. Mobile friendly.",
  "main": "app/js/bundle.js",
  "scripts": {
    "serve": "npm-run-all -p serve:*",
    "serve:rollup": "rollup -c -w",
    "serve:hugo": "hugo server -ws site",
    "build": "npm-run-all -s build:*",
    "build:rollup": "rollup -c",
    "build:hugo": "hugo -s site -d ../dist",
    "lint": "jshint src/",
    "clean": "js-beautify -r src/*/*.js src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrispalmeri/really-sketch.git"
  },
  "author": "Chris Palmeri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrispalmeri/really-sketch/issues"
  },
  "homepage": "https://github.com/chrispalmeri/really-sketch#readme",
  "devDependencies": {
    "hugo-bin": "^0.58.0",
    "js-beautify": "^1.11.0",
    "jshint": "^2.11.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.10.2"
  }
}
